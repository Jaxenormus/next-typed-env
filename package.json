{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "next-typed-env",
  "version": "1.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/jaxenormus/next-typed-env"
  },
  "files": [
    "build/**/*"
  ],
  "scripts": {
    "test": "jest --config jestconfig.json",
    "lint": "eslint -c .eslintrc.cjs . --fix",
    "format": "prettier --config prettier.config.cjs -w src/**/* *.json *.cjs",
    "build": "esbuild ./src/index --format=cjs --outdir=./build && yarn postbuild",
    "postbuild": "tsc --emitDeclarationOnly --declarationDir ./build"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      "@semantic-release/github"
    ]
  },
  "dependencies": {
    "next": "^13.4.8",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^10.0.1",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^9.0.3",
    "@semantic-release/npm": "^10.0.4",
    "@semantic-release/release-notes-generator": "^11.0.4",
    "@trivago/prettier-plugin-sort-imports": "^4.1.1",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.3",
    "@typescript-eslint/eslint-plugin": "^5.61.0",
    "@typescript-eslint/parser": "^5.60.0",
    "esbuild": "^0.18.11",
    "eslint": "^8.44.0",
    "eslint-config-next": "^13.4.7",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-unused-imports": "^2.0.0",
    "jest": "^29.6.0",
    "prettier": "^2.8.8",
    "semantic-release": "^21.0.7",
    "ts-jest": "^29.1.1",
    "typescript": "^5.1.6"
  }
}
